<Window x:Class="_09___ProgressBar_Control.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_09___ProgressBar_Control"
        mc:Ignorable="d"
        Title="MainWindow" Height="294" Width="526">
    <Grid>
        <ProgressBar HorizontalAlignment="Center" Height="20" Margin="0,52,0,0" VerticalAlignment="Top" Width="228" Value="70" Orientation="Horizontal" IsIndeterminate="True"/>
        <ProgressBar x:Name="mainProgressBar" HorizontalAlignment="Center" Height="20" Margin="0,115,0,0" VerticalAlignment="Top" Width="228" Value="70" Orientation="Horizontal" FlowDirection="RightToLeft" ValueChanged="ProgressBar_ValueChanged"/>
        <Button x:Name="increaseButton" Content="+" HorizontalAlignment="Left" Margin="149,156,0,0" VerticalAlignment="Top" FontSize="20" Width="32" Click="increaseButton_Click"/>
        <Button x:Name="decreaseButton" Content="-" HorizontalAlignment="Left" Margin="186,156,0,0" VerticalAlignment="Top" FontSize="20" Width="32" Click="decreaseButton_Click"/>

    </Grid>
</Window>
