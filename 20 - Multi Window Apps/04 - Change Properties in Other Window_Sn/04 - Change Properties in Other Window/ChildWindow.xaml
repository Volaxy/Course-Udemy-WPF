<Window x:Class="_04___Change_Properties_in_Other_Window.ChildWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_04___Change_Properties_in_Other_Window"
        mc:Ignorable="d"
        Title="ChildWindow" Height="450" Width="800">
    <Grid>
        <Label x:Name="childLabel" Content="Label" HorizontalAlignment="Center" VerticalAlignment="Center" Height="174" Width="520" FontSize="48">
            <Label.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFC141FF"/>
                    <GradientStop Color="#FF76FCFF" Offset="1"/>
                </LinearGradientBrush>
            </Label.Background>
        </Label>
        <Button x:Name="saveButton" Content="Save" HorizontalAlignment="Center" Margin="0,332,0,0" VerticalAlignment="Top" FontSize="36" Height="67" Width="300"/>

    </Grid>
</Window>
