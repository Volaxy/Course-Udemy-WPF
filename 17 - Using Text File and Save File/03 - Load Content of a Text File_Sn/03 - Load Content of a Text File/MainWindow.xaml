<Window x:Class="_03___Load_Content_of_a_Text_File.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_03___Load_Content_of_a_Text_File"
        mc:Ignorable="d"
        Title="MainWindow" Height="230" Width="299" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBox x:Name="textTextBox" TextWrapping="Wrap" Text="TextBox" Margin="22,74,22,23" VerticalScrollBarVisibility="Auto" AcceptsReturn="True"/>
        <Button x:Name="saveButton" Content="Save in Text" HorizontalAlignment="Left" Margin="22,19,0,0" Width="71" Click="saveButton_Click" Height="25" VerticalAlignment="Top"/>
        <Button x:Name="loadButton" Content="Load Text" HorizontalAlignment="Center" Margin="0,19,0,0" VerticalAlignment="Top" Height="25" Width="75" Click="loadButton_Click"/>

    </Grid>
</Window>
