<Window x:Class="_05____Using_OpenFileDialouge.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_05____Using_OpenFileDialouge"
        mc:Ignorable="d"
        Title="MainWindow" Height="236" Width="362">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="31*"/>
            <RowDefinition Height="144*"/>
        </Grid.RowDefinitions>
        <Image x:Name="imageControl" Source="/koala_resized.jpg" Stretch="Fill" Grid.Row="1" Margin="0,3,0,0"/>
        <Button x:Name="loadImageButton" Content="Load Image" HorizontalAlignment="Left" VerticalAlignment="Center" Height="20" Width="66" Click="loadImageButton_Click"/>
        <Button x:Name="fillButton" Content="Fill" HorizontalAlignment="Left" VerticalAlignment="Center" Height="20" Width="66" Margin="100,0,0,0" Click="fillButton_Click"/>
        <Button x:Name="zoomButton" Content="Zoom" HorizontalAlignment="Left" VerticalAlignment="Center" Height="20" Width="66" Margin="194,0,0,0" Click="zoomButton_Click"/>
        <Button x:Name="browseButton" Content="Browse" HorizontalAlignment="Left" Margin="282,0,0,0" VerticalAlignment="Center" Click="browseButton_Click"/>

    </Grid>
</Window>
