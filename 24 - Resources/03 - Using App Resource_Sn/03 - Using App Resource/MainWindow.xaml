<Window x:Name="mainWindow" x:Class="_03___Using_App_Resource.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_03___Using_App_Resource"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Button" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="{DynamicResource ButtonFontSize}" Height="{DynamicResource ButtonHeight}" Width="{DynamicResource ButtonWidth}"/>
        <Button Content="Button" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0" FontSize="{DynamicResource ButtonFontSize}" Width="{DynamicResource ButtonWidth}"/>

    </Grid>
</Window>
