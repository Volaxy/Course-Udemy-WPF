        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_06__Common_Events_of_TextBox"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="firstTextBox" HorizontalAlignment="Center" Margin="0,81,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="136" Height="57" FontSize="22" TextChanged="firstTextBox_TextChanged" GotFocus="firstTextBox_GotFocus" LostFocus="firstTextBox_LostFocus"/>
        <TextBox x:Name="secondTextBox" HorizontalAlignment="Center" Margin="0,160,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="136" Height="57" FontSize="22"/>
        <TextBox x:Name="thirdTextBox" HorizontalAlignment="Center" Margin="0,240,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="136" Height="57" FontSize="22"/>

    </Grid>
</Window>
