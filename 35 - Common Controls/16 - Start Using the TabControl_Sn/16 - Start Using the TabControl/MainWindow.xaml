<Window x:Class="_16___Start_Using_the_TabControl.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_16___Start_Using_the_TabControl"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="465">
    <Grid>
        <TabControl TabStripPlacement="Top">
            <TabItem Header="Application">
                <Grid Background="#FFE5E5E5">
                    <TextBox HorizontalAlignment="Center" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Center" Width="120"/>
                </Grid>
            </TabItem>
            <TabItem Header="Settings">
                <Grid Background="#FFE5E5E5">
                    <Slider HorizontalAlignment="Center" VerticalAlignment="Center" Width="121"/>
                </Grid>
            </TabItem>
            <TabItem Header="Display">
                <Grid Background="#FFE5E5E5">
                    <ProgressBar HorizontalAlignment="Center" Height="23" VerticalAlignment="Center" Width="162" Value="40"/>
                </Grid>
            </TabItem>
            <TabItem Header="About">
                <Grid Background="#FFE5E5E5">
                    <Label Content="Label" HorizontalAlignment="Left" Margin="106,73,0,0" VerticalAlignment="Top"/>
                    <TextBox HorizontalAlignment="Left" Margin="314,115,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>

                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
