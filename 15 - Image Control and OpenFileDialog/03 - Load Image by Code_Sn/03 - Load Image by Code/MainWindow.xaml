<Window x:Class="_03___Load_Image_by_Code.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_03___Load_Image_by_Code"
        mc:Ignorable="d"
        Title="MainWindow" Height="191" Width="249">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="31*"/>
            <RowDefinition Height="144*"/>
        </Grid.RowDefinitions>
        <Image x:Name="imageControl" Source="/koala_resized.jpg" Stretch="Fill" Grid.Row="1" Margin="0,3,0,0"/>
        <Button x:Name="loadImageButton" Content="Load Image" HorizontalAlignment="Left" VerticalAlignment="Center" Height="20" Width="66" Click="loadImageButton_Click"/>

    </Grid>
</Window>
