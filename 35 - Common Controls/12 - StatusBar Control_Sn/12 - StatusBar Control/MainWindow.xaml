<Window x:Class="_12___StatusBar_Control.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_12___StatusBar_Control"
        mc:Ignorable="d"
        Title="MainWindow" Height="202" Width="424">
    <Grid>
        <StatusBar Height="32" VerticalAlignment="Bottom">
            <Button Content="Info" Cursor="Hand"/>
            <Separator/>
            <StatusBarItem Content="Count: "/>
            <Label Content="0"/>
            <Separator Width="1" HorizontalAlignment="Left"/>
            <StatusBarItem Content="Zoom:" />
            <ComboBox Width="68" SelectedIndex="2" Cursor="Hand">
                <ComboBoxItem Content="50%"/>
                <ComboBoxItem Content="75%"/>
                <ComboBoxItem Content="100%"/>
                <ComboBoxItem Content="150%"/>
            </ComboBox>
            <Separator Width="1" HorizontalAlignment="Left"/>
        </StatusBar>

    </Grid>
</Window>
