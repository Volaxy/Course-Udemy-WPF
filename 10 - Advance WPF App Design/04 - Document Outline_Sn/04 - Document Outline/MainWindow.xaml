        <TextBox HorizontalAlignment="Left" Margin="106,102,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="271" d:IsHidden="True"/>
        <Label HorizontalAlignment="Left" Margin="12,118,0,0" VerticalAlignment="Top" Content="Cell:"/>
